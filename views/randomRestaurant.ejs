<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/carousel.js"></script>
    <meta content="width=device-width, initial-scale=1" name="viewport" />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <button id="start">Start</button>
    <button id="stop">Stop</button>

    <div class="restaurants-title">
      <%= restaurants.length %> restaurants to choose from
    </div>

    <script>
      window.restaurants = [];
     </script>

    <div id="container">
      <div id="separator"></div>
      <div id="carousel">
          <% restaurants.forEach(function(restaurant){ %>
            <div class="image-container">
              <img src=<%= restaurant.imageURL %> width="300" height="150" />
              <div class="name-container">
                <div class="name">
                  <%= restaurant.name %>
                </div>
              </div>
            </div>
            <script>
              window.restaurants.push({
                name: "<%= restaurant.name %>",
                imageURL: "<%= restaurant.imageURL %>",
                url: "<%= restaurant.url %>",
              })
            </script>
          <% }); %>
          <% restaurants.forEach(function(restaurant){ %>
            <div class="image-container">
              <img src=<%= restaurant.imageURL %> width="300" height="150" />
              <div class="name-container">
                <div class="name">
                  <%= restaurant.name %>
                </div>
              </div>
            </div>
          <% }); %>
      </div>
      <span style="display: none;" id="nrResturants"><%= restaurants.length %></span>
    </div>
  </body>
</html>
